	@Test
	void testDistance2D() {
		Index2D t = new Index2D(1,0);
		Index2D o = new Index2D(0,0);
		double expected = 1;
		double ans = t.distance2D(o);
		double ans1 = t.distance2D(t);
		assertEquals(ans, expected);
		assertEquals(ans1, 0);
	}


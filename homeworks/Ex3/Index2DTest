		Index2D y = new Index2D(3,3);
		assertTrue(x.equals(y));
		Index2D d = new Index2D(0,5);
		Index2D e = new Index2D(5,0);
		boolean issame2 = d.equals(e);
		if (issame2){
			assertFalse(issame2);
